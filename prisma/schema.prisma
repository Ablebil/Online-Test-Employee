generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  PEGAWAI
}

enum EmploymentStatus {
  TETAP
  KONTRAK
  MAGANG
}

enum AttendanceStatus {
  HADIR
  SAKIT
  IZIN
  CUTI
  ALPHA
}

model Department {
  id   String @id @default(uuid())
  name String @unique @db.VarChar(100)

  employees Employee[]

  @@map("departments")
}

model Employee {
  id       String  @id @default(uuid())
  nik      String  @unique @db.VarChar(20)
  name     String  @db.VarChar(100)
  email    String  @unique @db.VarChar(100)
  phone    String? @db.VarChar(20)
  password String  @db.VarChar(255)

  role             Role             @default(PEGAWAI)
  position         String           @db.VarChar(100)
  employmentStatus EmploymentStatus @default(TETAP)
  joinDate         DateTime         @default(now()) @db.Date

  departmentId String
  department   Department @relation(fields: [departmentId], references: [id])

  attendances Attendance[]

  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @updatedAt @db.Timestamptz(6)

  @@index([departmentId])
  @@map("employees")
}

model Attendance {
  id       String    @id @default(uuid())
  date     DateTime  @db.Date
  checkIn  DateTime? @db.Timestamptz(6)
  checkOut DateTime? @db.Timestamptz(6)

  status AttendanceStatus

  employeeId String
  employee   Employee @relation(fields: [employeeId], references: [id])

  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @updatedAt @db.Timestamptz(6)

  @@unique([date, employeeId])
  @@index([date])
  @@index([employeeId, date])
  @@map("attendances")
}
